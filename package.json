{
  "name": "vamsa",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "postinstall": "[ -f packages/api/src/drizzle/schema/index.ts ] && bun run db:generate || true",
    "// === Development ===": "",
    "dev": "bun scripts/dev.ts",
    "dev:web-only": "bun run --filter @vamsa/web dev",
    "// === Build ===": "",
    "build": "bun run --filter '*' build",
    "build:web": "bun run --filter @vamsa/web build",
    "preview": "bun run --filter @vamsa/web preview",
    "// === Code Quality ===": "",
    "check": "bun scripts/check-all.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "bun run --filter '*' typecheck",
    "// === Testing ===": "",
    "test": "bun run --filter '*' test",
    "test:unit": "bun run --filter @vamsa/lib --filter @vamsa/ui test",
    "test:e2e": "bun run --filter @vamsa/web test:e2e",
    "test:perf": "bun run --filter @vamsa/web test:perf",
    "test:int": "bun run --filter @vamsa/web test:int",
    "test:mutation": "bun scripts/mutation-test.ts",
    "test:mutation:lib": "bun scripts/mutation-test.ts lib",
    "test:mutation:ui": "bun scripts/mutation-test.ts ui",
    "test:mutation:api": "bun scripts/mutation-test.ts api",
    "test:mutation:web": "bun scripts/mutation-test.ts web",
    "test:coverage": "bun scripts/check-coverage.ts",
    "check:bundle": "bun run --filter @vamsa/web check:bundle",
    "// === Database ===": "",
    "db:generate": "bun run --filter @vamsa/api db:generate",
    "db:push": "bun run --filter @vamsa/api db:push",
    "db:migrate": "bun run --filter @vamsa/api db:migrate",
    "db:seed": "bun run --filter @vamsa/api db:seed",
    "db:seed:dev": "bun run --filter @vamsa/api db:seed:dev",
    "db:seed:e2e": "bun run --filter @vamsa/api db:seed:e2e",
    "db:studio": "bun run --filter @vamsa/api db:studio",
    "db:backup": "bun scripts/backup-database.ts --type=full",
    "db:backup:pre-migration": "bun scripts/backup-database.ts --type=pre-migration --verify",
    "db:backup:status": "bun scripts/backup-database.ts --status",
    "db:backup:verify": "bun scripts/backup-database.ts --verify",
    "db:restore": "bun scripts/restore-database.ts",
    "db:restore:list": "bun scripts/restore-database.ts --list",
    "// === Docker (Production) ===": "",
    "docker": "docker compose --env-file .env -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose --env-file .env -f docker/docker-compose.yml down",
    "docker:logs": "docker compose --env-file .env -f docker/docker-compose.yml logs -f",
    "docker:build": "docker build -f docker/Dockerfile -t vamsa-app .",
    "docker:build:ssl-skip": "docker build -f docker/Dockerfile -t vamsa-app --build-arg SKIP_SSL_VERIFY=true .",
    "// === Docker (Development) ===": "",
    "docker:dev": "docker compose --env-file .env -f docker/docker-compose.dev.yml up -d",
    "docker:dev:app": "docker compose --env-file .env -f docker/docker-compose.dev.yml --profile app up -d",
    "docker:dev:down": "docker compose --env-file .env -f docker/docker-compose.dev.yml --profile app down",
    "docker:dev:logs": "docker compose --env-file .env -f docker/docker-compose.dev.yml logs -f",
    "// === Docker (E2E) ===": "",
    "docker:e2e": "docker compose --env-file .env -f docker/docker-compose.e2e.yml up --exit-code-from e2e --abort-on-container-exit",
    "docker:e2e:down": "docker compose --env-file .env -f docker/docker-compose.e2e.yml down -v",
    "docker:e2e:build": "docker build -t ghcr.io/darshan-rambhia/vamsa/e2e:local -f docker/Dockerfile.e2e .",
    "// === Docker (Backup) ===": "",
    "docker:backup": "docker compose --env-file .env -f docker/docker-compose.yml -f docker/docker-compose.backup.yml up -d",
    "docker:backup:down": "docker compose --env-file .env -f docker/docker-compose.yml -f docker/docker-compose.backup.yml down",
    "// === Observability ===": "",
    "observability": "docker compose --env-file .env -f docker/observability/docker-compose.yml up -d",
    "observability:down": "docker compose --env-file .env -f docker/observability/docker-compose.yml down",
    "observability:logs": "docker compose --env-file .env -f docker/observability/docker-compose.yml logs -f",
    "// === Utilities ===": "",
    "setup": "bun scripts/setup-env.ts",
    "setup:docker": "bun scripts/setup-env.ts --docker",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules bun.lock",
    "release": "bunx semantic-release",
    "release:dry": "bunx semantic-release --dry-run",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/swagger-ui": "0.5.3",
    "@hono/zod-openapi": "1.2.1",
    "cmdk": "1.1.1",
    "date-fns": "4.1.0",
    "drizzle-orm": "0.45.1",
    "html2canvas": "1.4.1",
    "ical-generator": "10.0.0",
    "maplibre-gl": "5.17.0",
    "rss": "1.2.2"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@stryker-mutator/core": "9.5.1",
    "@stryker-mutator/typescript-checker": "9.5.1",
    "@tanstack/eslint-config": "0.3.4",
    "@testing-library/react": "16.3.2",
    "@types/bun": "latest",
    "@types/node": "25.2.0",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "globals": "17.3.0",
    "happy-dom": "20.5.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "semantic-release": "25.0.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0"
  },
  "overrides": {
    "@react-email/render": "^2.0.4",
    "hono": ">=4.11.7",
    "lodash": ">=4.17.23",
    "playwright-core": "1.58.1",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'bun run typecheck'",
      "bash -c 'bun run test'"
    ],
    "*.{js,jsx,json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  }
}
