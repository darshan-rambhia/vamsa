{
  "name": "vamsa",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  },
  "scripts": {
    "// === Development ===": "",
    "dev": "bun scripts/dev.ts",
    "dev:web-only": "turbo run dev --filter=@vamsa/web",
    "// === Build ===": "",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@vamsa/web",
    "preview": "turbo run preview --filter=@vamsa/web",
    "// === Code Quality ===": "",
    "check": "bun scripts/check-all.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "turbo run typecheck",
    "// === Testing ===": "",
    "test": "turbo run test",
    "test:unit": "turbo run test --filter=@vamsa/lib --filter=@vamsa/ui",
    "test:e2e": "turbo run test:e2e --filter=@vamsa/web",
    "test:mutation": "bun scripts/mutation-test.ts",
    "test:mutation:lib": "bun scripts/mutation-test.ts lib",
    "test:mutation:ui": "bun scripts/mutation-test.ts ui",
    "test:mutation:api": "bun scripts/mutation-test.ts api",
    "test:mutation:web": "bun scripts/mutation-test.ts web",
    "// === Database ===": "",
    "db:generate": "pnpm --filter=@vamsa/api db:generate",
    "db:push": "pnpm --filter=@vamsa/api db:push",
    "db:migrate": "pnpm --filter=@vamsa/api db:migrate",
    "db:migrate:deploy": "pnpm --filter=@vamsa/api db:migrate:deploy",
    "db:seed": "pnpm --filter=@vamsa/api db:seed",
    "db:studio": "pnpm --filter=@vamsa/api db:studio",
    "// === Docker ===": "",
    "docker": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "docker:build": "docker compose -f docker/docker-compose.yml build",
    "// === Observability ===": "",
    "observability:start": "./scripts/start-observability.sh",
    "observability:stop": "docker-compose -f docker/docker-compose.observability.yml down",
    "observability:logs": "docker-compose -f docker/docker-compose.observability.yml logs -f",
    "observability:restart": "pnpm observability:stop && pnpm observability:start",
    "// === Utilities ===": "",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^1.2.0",
    "date-fns": "^4.1.0",
    "html2canvas": "^1.4.1",
    "ical-generator": "^10.0.0",
    "maplibre-gl": "^5.16.0",
    "rss": "^1.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/typescript-checker": "^9.4.0",
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "packageManager": "pnpm@10.28.0",
  "pnpm": {
    "overrides": {
      "@react-email/render": "^2.0.2",
      "hono": ">=4.11.4",
      "lodash": ">=4.17.23"
    }
  }

}
