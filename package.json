{
  "name": "vamsa",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --filter=@vamsa/web",
    "dev:legacy": "turbo run dev --filter=@vamsa/web-legacy",
    "dev:convex": "turbo run dev --filter=@vamsa/api",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@vamsa/web",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:unit": "turbo run test --filter=@vamsa/lib --filter=@vamsa/ui",
    "test:e2e": "turbo run test:e2e --filter=@vamsa/web",
    "test:coverage": "turbo run test:coverage",
    "format": "prettier --write .",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "docker": "bun run scripts/docker.ts",
    "docker:convex": "docker compose -f docker/docker-compose.convex.yml up -d",
    "docker:convex:down": "docker compose -f docker/docker-compose.convex.yml down"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.5.4",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.15.0"
}
