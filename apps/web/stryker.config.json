{
  "$schema": "../../node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "pnpm",
  "testRunner": "command",
  "commandRunner": {
    "command": "bun run test"
  },
  "checkers": ["typescript"],
  "plugins": ["@stryker-mutator/typescript-checker"],
  "tsconfigFile": "./tsconfig.json",
  "typescriptChecker": {
    "prioritizePerformanceOverAccuracy": true
  },
  "mutate": [
    "src/server/**/*.ts",
    "server/**/*.ts",
    "!src/server/**/*.test.ts",
    "!server/**/*.test.ts",
    "!src/server/**/*.function.ts",
    "!tests/**/*.ts"
  ],
  "ignorePatterns": ["node_modules", "dist", ".git", ".stryker-tmp"],
  "reporters": ["clear-text", "progress"],
  "concurrency": 15,
  "tempDirName": ".stryker-tmp",
  "cleanTempDir": "always",
  "coverageAnalysis": "perTest",
  "timeoutMS": 30000,
  "timeoutFactor": 2.5,
  "disableBail": false
}
