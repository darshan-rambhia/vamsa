{
  "$schema": "../../node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "pnpm",
  "testRunner": "command",
  "commandRunner": {
    "command": "bun test --preload ../../packages/ui/src/test-setup.ts ./src/server ./server"
  },
  "checkers": ["typescript"],
  "plugins": ["@stryker-mutator/typescript-checker"],
  "tsconfigFile": "./tsconfig.json",
  "typescriptChecker": {
    "prioritizePerformanceOverAccuracy": true
  },
  "mutate": [
    "src/server/**/*.ts",
    "server/**/*.ts",
    "!src/server/**/*.test.ts",
    "!server/**/*.test.ts",
    "!src/server/**/*.function.ts"
  ],
  "ignorePatterns": [
    "node_modules",
    "dist",
    ".git",
    ".stryker-tmp"
  ],
  "reporters": ["html", "clear-text", "progress", "json"],
  "htmlReporter": {
    "fileName": "../../test-output/mutation/web/index.html"
  },
  "jsonReporter": {
    "fileName": "../../test-output/mutation/web/mutation-report.json"
  },
  "concurrency": 10,
  "tempDirName": ".stryker-tmp",
  "coverageAnalysis": "perTest",
  "timeoutMS": 30000,
  "timeoutFactor": 2.5,
  "disableBail": false,
  "cleanTempDir": "always"
}
