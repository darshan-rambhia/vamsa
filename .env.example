# ============================================
# DATABASE
# ============================================
# PostgreSQL (default)
DATABASE_URL="postgresql://familytree:password@localhost:5432/familytree"
# SQLite alternative (uncomment to use)
# DATABASE_URL="file:./data/familytree.db"

# ============================================
# AUTHENTICATION
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Initial Admin (required for first run)
ADMIN_EMAIL="admin@yourfamily.com"
# Leave empty to auto-generate and print to logs
ADMIN_PASSWORD=""

# OIDC (optional - bring your own provider)
OIDC_ENABLED="false"
OIDC_PROVIDER_NAME="SSO"
OIDC_ISSUER=""
OIDC_CLIENT_ID=""
OIDC_CLIENT_SECRET=""

# ============================================
# STORAGE
# ============================================
STORAGE_PROVIDER="local"
STORAGE_LOCAL_PATH="./data/uploads"

# S3 Configuration (when STORAGE_PROVIDER=s3)
S3_ENDPOINT=""
S3_BUCKET="photos"
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_REGION="us-east-1"

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_NAME="Family Tree"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
