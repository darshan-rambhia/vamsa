{
  "name": "@vamsa/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./client": {
      "types": "./src/client.ts",
      "import": "./src/client.ts"
    }
  },
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:generate:sqlite": "drizzle-kit generate --config=drizzle-sqlite.config.ts",
    "db:push": "drizzle-kit push",
    "db:push:sqlite": "drizzle-kit push --config=drizzle-sqlite.config.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:sqlite": "drizzle-kit migrate --config=drizzle-sqlite.config.ts",
    "db:seed": "bun src/drizzle/seed.ts",
    "db:seed:dev": "bun src/drizzle/seed-dev.ts",
    "db:seed:e2e": "bun src/drizzle/seed-e2e.ts",
    "db:studio": "drizzle-kit studio",
    "check:schema-drift": "bun run scripts/check-schema-drift.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun run vitest run"
  },
  "dependencies": {
    "@vamsa/schemas": "workspace:*",
    "dotenv": "17.3.1",
    "drizzle-orm": "0.45.1",
    "pg": "^8.18.0",
    "resend": "^6.7.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "^25.0.8",
    "@types/pg": "^8.16.0",
    "@vamsa/lib": "workspace:*",
    "drizzle-kit": "0.31.9",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
